<div class="row">
  <div class="small-9 small-centered large-uncentered columns">
<%= form_for @address, url: user_address_path do |f| %>

<fieldset>
    <legend>Address</legend>
<div class="row">
  <div class="small-8 columns">
    <%= f.label :line1, class: "right inline" %>
  </div>
  <div class="large-4 columns">
    <%= f.text_field :line1 %>
  </div>
</div>
<div class="row">
  <div class="small-8 columns">
    <%= f.label :line2, class: "right inline" %>
  </div>
  <div class="large-4 columns">
    <%= f.text_field :line2 %>
  </div>
  </div>
  <div class="row">
  <div class="small-8 columns">
    <%= f.label :city, class: "right inline" %>
  </div>
  <div class="large-4 columns">
    <%= f.text_field :city %>
  </div>
</div>
<div class="row">
  <div class="small-8 columns">
    <%= f.label :state, class: "right inline" %>
  </div>
  <div class="large-4 columns">
    <%= f.text_field :state %>
  </div>
  </div>
  <div class="row">
  <div class="small-8 columns">
    <%= f.label :zip, class: "right inline" %>
  </div>
  <div class="large-4 columns">
    <%= f.text_field :zip %>
  </div>
  </div>
<div class="row">
  <div class="small-8 columns">
    <!-- just for spacing -->
  </div>
  <div class="large-4 columns">
    <%= f.submit "Add address" %>
  </div>
</div>
</fieldset>
<% end %>
</div>
</div>
