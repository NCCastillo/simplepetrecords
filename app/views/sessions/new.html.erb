<div class="row">
  <div class="small-9 small-centered large-uncentered columns">
<%= form_tag sessions_path do %>
<fieldset>
    <legend>Login</legend>
<div class="row">
  <div class="small-8 columns">
    <%= label_tag :email, "Email", class: "right inline" %>
  </div>
  <div class="large-4 columns">
    <%= text_field_tag :email %>
  </div>
</div>
<div class="row">
  <div class="small-8 columns">
    <%= label_tag :password, "Password", class: "right inline" %>
  </div>
  <div class="large-4 columns">
    <%= password_field_tag :password %>
  </div>
  </div>
<div class="row">
  <div class="large-4 small-offset-3 columns">
    <%= submit_tag  "Log in" %>
  </div>
</div>
</fieldset>
<% end %>
</div>
</div>
