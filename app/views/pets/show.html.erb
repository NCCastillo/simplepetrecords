<div class="row">
  <div class="small-12 columns">
  <fieldset>
      <legend><h3><%= @pet.name %>'s Records </h3></legend>
  <div class="section-container tabs" data-section="tabs">
    <section>
      <p class="title" data-section-title><a href="#">Vet Visits</a></p>
      <div class="content" data-section-content>
        <p>
          <% if @pet.visits.empty? %>
            <%= render "message" %>
          <% else %>
            <%= render partial: "visits", locals: { pet: @pet } %>
          <% end %>
        </p>
        <%= link_to "New Record", new_user_pet_visit_path(@pet.user.id, @pet), class: "tiny button" %>
      </div>
    </section>
    <section>
      <p class="title" data-section-title><a href="#">Immunizations</a></p>
      <div class="content" data-section-content>
        <p>
        <% if @pet.immunizations.empty? %>
            <%= render "message" %>
          <% else %>
            <%= render partial: "immunizations", locals: { pet: @pet } %>
          <% end %>
        </p>
        <%= link_to "New Record", new_user_pet_immunization_path(@pet.user.id, @pet), class: "tiny button" %>
      </div>
    </section>
    <section>
      <p class="title" data-section-title><a href="#">Medications</a></p>
      <div class="content" data-section-content>
        <p>
          <% if @pet.medications.empty? %>
            <%= render "message" %>
          <% else %>
            <%= render  partial: "medications", locals: { pet: @pet } %>
          <% end %>
        </p>
        <%= link_to "New Record", new_user_pet_medication_path(@pet.user.id, @pet), class: "tiny button" %>
      </div>
    </section>
    <section>
      <p class="title" data-section-title><a href="#">Known Conditions</a></p>
      <div class="content" data-section-content>
        <p>
          <% if @pet.conditions.empty? %>
            <%= render "message" %>
          <% else %>
            <%= render partial: "conditions", locals: { pet: @pet } %>
          <% end %>
        </p>
        <%= link_to "New Record", new_user_pet_condition_path(@pet.user.id, @pet), class: "tiny button" %>
      </div>
      </section>
    </div>
  </div>
</fieldset>
</div>
<div class="row">
  <div class="small-6 columns">
<fieldset>
      <legend><h3><%= @pet.name %>'s Info </h3></legend>
<br>
Gender: <%= @pet.gender %>
<br>
Breed: <%= @pet.breed %>
<br>
Weight: <%= @pet.weight %> lbs
<br>
License #: <%= @pet.license %>
<br>
Microchip #: <%= @pet.microchip %>
<br>
Species: <%= @pet.species %>
<br>
Rabies ID: <%= @pet.rabies_id %>
<br>
Spayed/Neutered: <%= @pet.neutered %>
<br>
<br>
<%= link_to "Edit info", edit_user_pet_path, class: "tiny button" %>
    </fieldset>
  </div>
  <div class="small-6 columns">
<fieldset>
      <legend><h3><%= @pet.name %>'s Vet </h3></legend>
<% if @pet.vet.nil? %>
<p>Please add your veterinarian's information<p>
<%= link_to "Create Vet", new_user_pet_vet_path(@pet.user.id, @pet), class: "tiny button" %>
<br>
<% else %> 
<br>
Name:<%= @pet.vet.name%>
<br>
Phone 1: <%= @pet.vet.phone1%>
<br>
Phone 2: <%= @pet.vet.phone2%>
<br>
Address:
<%= @pet.vet.address.line1 %>
<%= @pet.vet.address.line2 %>
<%= @pet.vet.address.city %>
<%= @pet.vet.address.state %>
<%= @pet.vet.address.zip %>
<br>
<br>
<br>
<br>
<br>
<br>
<%= link_to "Edit Vet", edit_user_pet_vet_path(@pet.user.id, @pet), class: "tiny button" %>
<% end %>
</fieldset>
</div>
</div>